@import './styl/base.styl'
@import './styl/settings.styl'

html, body
  position relative
  top 0
  left 0
  width 100%
  height 100%
  padding 0
  margin 0

body
  f()
  vertical()
  jcc()
  aic()
  acc()
  font-family 'Lato', sans-serif
  font-size 16px
  font-weight 400
  line-height 1.5
  background-color light
  color dark
.empty
  display none

#app
  position relative
  top 0
  left 0
  width 100%
  height 100%
  >div
    f()
    vertical()
    jcc()
    aist()
    acc()
    width 100%
    height 100%

h1
  padding 35px
  font-weight 700
  >span
    display block
    >span:first-child
      color primary
  >span:first-child
    font-size 3rem
  >span:last-child
    font-size 5rem

#bottom
  f()
  horizontal()
  jcc()
  aie()
  position absolute
  bottom 0
  left 0
  width 100%

#messages
  one()
  height 60px
  overflow hidden
  background-color primary
  .wrapper
    position relative
    top 0
    left 0
    height 100%
    margin 0
    padding 0
    transform: translateX(100%)
    animation travel 20s linear 0s infinite
    ul
      f()
      horizontal()
      jcs()
      aic()
      acc()
      height 100%
      li
        color light
        padding 0 15px
        white-space nowrap

@keyframes travel
  from
    transform: translateX(100%)
  to
    transform translateX(-100%)


@import './styl/list.styl'
